<style>
    .post-container {
        font-family: Arial, sans-serif;
        padding: 20px;
        border: 1px solid #e0e0e0;
        border-radius: 5px;
        margin: 20px 0;
        box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.05);
    }

    .post-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .post-content {
        display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 10px 0;
        
    }

    .post-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
        font-weight: bold;
        margin-left: 10px;
    }

    .btn-primary {
        background-color: #007BFF;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }
</style>


<div class="post-container">
    <div class="post-header">
        <p><strong>Poster:</strong> <%= post.poster %></p>
        <p><%= link_to "Delete", [post.user, post], class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></p>
    </div>

    <div class="post-content">
        <p><strong>Title:</strong> <%= post.title %> </p>
            
        <p><%= link_to "Go to the post", user_post_path(post.user, post), class: "btn btn-primary" %></p>
    </div>
</div>


